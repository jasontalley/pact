# Database
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=pact
DATABASE_PASSWORD=your-password-here
DATABASE_NAME=pact_development

# Application
NODE_ENV=development
PORT=3000

# MCP server (SSE). Started with the app when set. Use 0 to disable.
MCP_PORT=3002

# LLM Configuration
# OpenAI Provider
OPENAI_API_KEY=your-openai-key-here
OPENAI_MODEL=gpt-5-nano

# Anthropic Provider
ANTHROPIC_API_KEY=your-anthropic-key-here
ANTHROPIC_MODEL=claude-sonnet-4-5

# Ollama Provider (local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:latest

# Default Provider (openai | anthropic | ollama)
LLM_DEFAULT_PROVIDER=openai

# LangSmith Tracing (optional but recommended)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your-langsmith-key-here
LANGCHAIN_PROJECT=pact-agents

# LLM Confidence Thresholds
LLM_CONFIDENCE_THRESHOLD_ATOMICITY=0.7
LLM_CONFIDENCE_THRESHOLD_TESTABILITY=0.7
LLM_CONFIDENCE_THRESHOLD_TRANSLATION=0.6

# LLM Budget Configuration
LLM_DAILY_BUDGET=10.0
LLM_MONTHLY_BUDGET=200.0

# Redis Configuration (for LLM caching)
REDIS_HOST=redis
REDIS_PORT=6379

# Logging
LOG_LEVEL=debug
