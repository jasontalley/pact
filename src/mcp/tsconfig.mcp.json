{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "outDir": "../../dist/mcp",
    "rootDir": ".",
    "declaration": false,
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["**/*.spec.ts"]
}
