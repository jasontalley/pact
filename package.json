{
  "name": "pact",
  "version": "0.1.0",
  "description": "System for capturing product intent and translating it into code via AI-assisted, test-driven development",
  "author": "Jason Talley",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./jest-e2e.config.js",
    "test:e2e:watch": "jest --config ./jest-e2e.config.js --watch",
    "test:bdd": "cucumber-js",
    "test:bdd:watch": "nodemon --exec cucumber-js",
    "test:quality": "node bootstrap/tooling/test-quality-analyzer.js",
    "test:quality:report": "node bootstrap/tooling/test-quality-analyzer.js --report",
    "test:coupling": "node bootstrap/tooling/test-atom-coupling.js src",
    "typeorm": "typeorm-ts-node-commonjs -d src/config/database/data-source.ts",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/config/database/data-source.ts",
    "migration:create": "typeorm-ts-node-commonjs migration:create",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/config/database/data-source.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/config/database/data-source.ts",
    "migration:show": "typeorm-ts-node-commonjs migration:show -d src/config/database/data-source.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@langchain/core": "^0.3.0",
    "@langchain/openai": "^0.3.0",
    "@modelcontextprotocol/sdk": "^0.4.0",
    "@nestjs/common": "^11.1.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.0",
    "@nestjs/platform-express": "^11.1.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^17.2.3",
    "ioredis": "^5.9.1",
    "langchain": "^0.3.0",
    "opossum": "^9.0.0",
    "p-retry": "^7.1.1",
    "pg": "^8.13.0",
    "rate-limiter-flexible": "^5.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.20",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^11.0.0",
    "@eslint/js": "^9.39.2",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.1.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.0",
    "@types/opossum": "^8.1.4",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.0",
    "glob": "^11.0.0",
    "husky": "^9.1.0",
    "jest": "^29.7.0",
    "jest-cucumber": "^4.0.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.4.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.0"
  }
}
