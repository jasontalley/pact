# Production Environment Configuration

# Database
DATABASE_USER=pact
DATABASE_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DATABASE_NAME=pact_production
# Set to true for first run to create schema, then set to false
DATABASE_SYNCHRONIZE=true

# Application
NODE_ENV=production
PORT=3000
MCP_PORT=3002

# LLM Configuration
# OpenAI Provider
OPENAI_API_KEY=your-production-openai-key
OPENAI_MODEL=gpt-5-nano

# Anthropic Provider
ANTHROPIC_API_KEY=your-production-anthropic-key
ANTHROPIC_MODEL=claude-sonnet-4-5

# Ollama Provider (if using local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:latest

# Default Provider (openai | anthropic | ollama)
LLM_DEFAULT_PROVIDER=openai

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Frontend URLs
NEXT_PUBLIC_API_URL=https://pact.yourdomain.com
NEXT_PUBLIC_WS_URL=wss://pact.yourdomain.com

# LangSmith (optional)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your-production-langsmith-key
LANGCHAIN_PROJECT=pact-production

# LLM Confidence Thresholds
LLM_CONFIDENCE_THRESHOLD_ATOMICITY=0.7
LLM_CONFIDENCE_THRESHOLD_TESTABILITY=0.7
LLM_CONFIDENCE_THRESHOLD_TRANSLATION=0.6

# LLM Budget Configuration
LLM_DAILY_BUDGET=10.0
LLM_MONTHLY_BUDGET=200.0

# Logging
LOG_LEVEL=info
